<h1>Bookings</h1>

<% if @bookings.empty? %>
  <p>You currently have no bookings.</p>
<% else %>
  <%= month_calendar(attribute: :check_in, end_attribute: :check_out, events: @bookings) do |date,bookings| %>
    <span class="calendar-day"><%= date.day %></span>

    <% bookings.each do |booking| %>
    <div class="booking">
      <%= booking.hotel_name %>
    </div>
    <% end %>
  <% end %>

  <div class="bookings-list">
    <%= render @bookings %>
  </div>
<% end %>
